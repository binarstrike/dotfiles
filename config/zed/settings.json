{
  "assistant": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4o"
    },
    "version": "2"
  },
  "vim_mode": true,
  "tab_size": 2,
  "ui_font_size": 18,
  "buffer_font_size": 16,
  "buffer_font_weight": 800,
  "buffer_font_family": "ComicShannsMono Nerd Font",
  "ui_font_family": "JetBrainsMono Nerd Font",
  "scrollbar": {
    "show": "auto"
  },
  "confirm_quit": true,
  "features": {
    "edit_prediction_provider": "copilot",
    "copilot": true
  },
  "theme": {
    "mode": "system",
    "light": "Catppuccin Mocha",
    "dark": "Catppuccin Mocha"
  },
  "terminal": {
    "shell": {
      "with_arguments": {
        "program": "/usr/bin/zsh",
        "args": ["-l"]
      }
    },
    "copy_on_select": true
  },
  "project_panel": {
    "button": false,
    "default_width": 220,
    "dock": "left",
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "indent_size": 10,
    "auto_reveal_entries": true,
    "auto_fold_dirs": true,
    "scrollbar": {
      "show": "never"
    }
  },
  "outline_panel": {
    "button": true,
    "default_width": 220,
    "dock": "right",
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "indent_size": 10,
    "auto_reveal_entries": true,
    "auto_fold_dirs": true
  }
}
