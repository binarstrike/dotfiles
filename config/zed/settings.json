{
  "vim_mode": true,
  "tab_size": 2,
  "ui_font_size": 14,
  "buffer_font_size": 13,
  "buffer_font_weight": 800,
  "buffer_font_family": "ComicShannsMono Nerd Font",
  "ui_font_family": "JetBrainsMono Nerd Font",
  "scrollbar": {
    "show": "never"
  },
  "confirm_quit": true,
  "features": {
    "inline_completion_provider": "none",
    "copilot": false
  },
  "theme": {
    "mode": "system",
    "light": "Catppuccin Latte",
    "dark": "Catppuccin Mocha"
  },
  "terminal": {
    "shell": {
      "with_arguments": {
        "program": "/usr/bin/zsh",
        "args": ["-l"]
      }
    },
    "copy_on_select": true
  }
}
